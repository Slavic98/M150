@model IEnumerable<Turnierverwaltung.Models.Tournment>

@{
    ViewBag.Title = "Saison";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Saison @*@Html.DisplayNameFor(model => model.Description)*@
        </th>
        <th>
            Start Datum @*@Html.DisplayNameFor(model => model.StartDate)*@
        </th>
        <th>
			End Datum @*@Html.DisplayNameFor(model => model.EndDate)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Tabelle", "Index", "Groups", new { id=item.TournamentPk }, null) 
        </td>
    </tr>
}

</table>
